pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Checking out source code'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage'
                sh './hello.sh'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running unit tests (Shift Left)'
                sh './test.sh'
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline SUCCESS - Code is healthy'
        }
        failure {
            echo '❌ Pipeline FAILED - Stop the Line'
        }
    }
}

